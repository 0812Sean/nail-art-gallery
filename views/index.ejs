<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Nail Art Gallery</title>
</head>
<body>
<%- include('partials/header') %>

<div class="container">
  <div class="design-list">
    <% if (designs.length > 0) { %>
      <% designs.forEach(design => { %>
        <div class="design">
          <img src="<%= design.image %>" alt="<%= design.title %>">
          <a href="/designs/<%= design._id %>">View Details</a>
        </div>
      <% }) %>
      <% for (let i = 0; i < (3 - designs.length % 3) % 3; i++) { %>
        <div class="design placeholder"></div>
      <% } %>
    <% } else { %>
      <p>No designs available in this category.</p>
    <% } %>

<%- include('partials/footer') %>

</body>
</html>
