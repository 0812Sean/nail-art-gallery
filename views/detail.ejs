<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail - <%= nailArtStyle.title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <h1><%= nailArtStyle.title %></h1>
    <img src="<%= nailArtStyle.image_url %>" alt="<%= nailArtStyle.title %>">
    <p><%= nailArtStyle.description %></p>
    <p>Category: <%= nailArtStyle.category.name %></p>
    <p>Artist: <%= nailArtStyle.user.username %></p>

    <h2>Reviews</h2>
    <ul>
      <% reviews.forEach(review => { %>
        <li><%= review.user.username %>: <%= review.comment %></li>
      <% }) %>
    </ul>

    <h2>Rate this Design</h2>
    <form action="/rate/<%= nailArtStyle._id %>" method="POST">
      <label for="score">Score: </label>
      <input type="number" name="score" id="score" min="1" max="5">
      <button type="submit">Submit</button>
    </form>

    <h2>Add a Review</h2>
    <form action="/review/<%= nailArtStyle._id %>" method="POST">
      <label for="comment">Comment: </label>
      <textarea name="comment" id="comment"></textarea>
      <button type="submit">Submit</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
